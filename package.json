{
  "name": "odango",
  "version": "1.0.0",
  "description": "なじみやすくておいしいブロックテーマ",
  "author": "yosiakatsuki",
  "license": "GPL-2.0-or-later",
  "keywords": [
	"WordPress",
	"Theme"
  ],
  "homepage": "https://wp-odango.com",
  "devDependencies": {
	"@babel/cli": "^7.18.10",
	"@babel/core": "^7.19.0",
	"@wordpress/babel-preset-default": "^7.0.0",
	"@wordpress/env": "^5.2.0",
	"autoprefixer": "^10.4.8",
	"cssnano": "^5.1.13",
	"husky": "^8.0.1",
	"npm-run-all": "^4.1.5",
	"postcss": "^8.4.16",
	"postcss-cli": "^10.0.0",
	"prettier": "^2.7.1",
	"sass": "^1.54.8"
  },
  "scripts": {
	"start:init": "wp-env start --xdebug",
	"start:update": "wp-env start --xdebug -- --update && npm run activate:theme",
	"start": "wp-env start --xdebug && npm run import && open http://localhost:10040/",
	"activate:theme": "wp-env run cli 'wp theme activate odango'",
	"stop": "npm run export && wp-env stop",
	"watch:js": "babel src/js --out-dir assets/js -w -s",
	"watch:postcss": "postcss temp/**/*.css --base temp/css --dir assets/css --verbose -w",
	"watch:css:custom-blocks": "sass blocks-custom:temp/css/custom-blocks --no-source-map --no-stop-on-error -w",
	"watch:css:core-blocks": "sass blocks-core:temp/css/core-blocks --no-source-map --no-stop-on-error -w",
	"watch:css:theme": "sass src/sass:temp/css --no-source-map --no-stop-on-error -w",
	"watch:css": "run-p watch:css:*",
	"watch": "run-p watch:*",
	"lint:php": "composer standards:check && composer standards:fix",
	"lint:js": "eslint --fix ./src/js/*.js",
	"lint": "run-s lint:*",
	"build:js": "babel src/js --out-dir assets/js",
	"build:postcss": "postcss assets/**/*.css -r",
	"build:css:custom-blocks": "sass blocks-custom:assets/css/custom-blocks --no-source-map",
	"build:css:core-blocks": "sass blocks-core:assets/css/core-blocks --no-source-map",
	"build:css:theme": "sass src/sass:assets/css --no-source-map",
	"build:css": "run-p build:css:*",
	"build": "run-s clean build:*",
	"cli": "wp-env run cli",
	"wp": "wp-env run cli wp",
	"test:php": "wp-env start && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/themes/odango/phpunit.xml.dist --verbose'",
	"test": "run-s test:*",
	"export:uploads": "npm run cli 'cp -r wp-content/uploads .wp-content'",
	"export:plugins": "npm run cli 'cp -r wp-content/plugins .wp-content'",
	"export:db": "npm run wp 'db export .wp-content/db.sql'",
	"export:clean:remove": "npm run cli 'rm -rf .wp-content/uploads' && npm run cli 'rm -rf .wp-content/plugins'",
	"export:clean:mkdir": "npm run cli 'mkdir -p .wp-content/uploads' && npm run cli 'mkdir -p .wp-content/plugins'",
	"export:clean": "run-s export:clean:remove export:clean:mkdir",
	"export": "npm run export:clean && run-p export:uploads export:plugins export:db",
	"import:uploads": "npm run cli 'cp -r .wp-content/uploads wp-content'",
	"import:plugins": "npm run cli 'cp -r .wp-content/plugins wp-content'",
	"import:db": "npm run wp 'db import .wp-content/db.sql'",
	"import": "run-s import:*"
  }
}
